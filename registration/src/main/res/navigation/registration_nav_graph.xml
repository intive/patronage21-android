<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registration_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.intive.registration.fragments.LoginFragment"
        android:label="LoginFragment" >
    <deepLink app:uri="intive://loginFragment" />
        <action
            android:id="@+id/action_register"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.intive.registration.fragments.RegistrationFragment"
        android:label="RegistrationFragment" >
        <action
            android:id="@+id/action_verify_email"
            app:destination="@id/emailVerificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/emailVerificationFragment"
        android:name="com.intive.registration.fragments.EmailVerificationFragment"
        android:label="EmailVerificationFragment" >
        <argument
            android:name="email"
            app:argType="string" />
        <action
            android:id="@+id/action_no_code"
            app:destination="@id/noCodeFragment" />
        <action
            android:id="@+id/action_error"
            app:destination="@id/errorFragment" />
        <action
            android:id="@+id/action_success"
            app:destination="@id/id_to_return" />
    </fragment>
    <fragment
        android:id="@+id/noCodeFragment"
        android:name="com.intive.registration.fragments.NoCodeFragment"
        android:label="NoCodeFragment" >
        <argument
            android:name="email"
            app:argType="string" />
        <action
            android:id="@+id/action_verify_email_again"
            app:destination="@id/emailVerificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/errorFragment"
        android:name="com.intive.registration.fragments.ErrorFragment"
        android:label="ErrorFragment" >
        <action
            android:id="@+id/action_back_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <navigation
        android:id="@+id/id_to_return"
        app:startDestination="@id/nav_graph">
        <fragment
            android:id="@+id/successFragment"
            android:name="com.intive.registration.fragments.SuccessFragment">
            <action
                android:id="@+id/action_exit_flow"
                app:destination="@id/id_to_return"/>
        </fragment>
    </navigation>

</navigation>